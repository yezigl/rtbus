/* pages/greenPlanet/share.wxss */

.container {
    width: 100%;
    height: 100%;
    background-color: #390a4a;
    display: flex;
    justify-content: center;
    position: absolute;
}

.share-layer {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
}

.share-canvas {
    width: 600rpx;
    height: 966rpx;
    margin-top: 36rpx;
    margin-left: auto;
    margin-right: auto;
}

.share-button {
    background: url('https://www.1e10.cn/images/share_ablum.svg') no-repeat;
    background-size: 100%;
    width: 300rpx;
    height: 102rpx;
    color: #3A094A;
    font-size: 32rpx;
    font-weight: bold;
    display: flex;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
    margin-top: 30rpx;
    padding-top: 16rpx;
}

.mask {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}

.gp {
    margin-top: 14rpx;
    color: #380749;
    z-index: 1;
}

.gp-show {
    width: 718rpx;
    height: 1022rpx;
    background-repeat: no-repeat;
    background-size: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 4rpx;
}

.gp-title {
    margin-top: 80rpx;
    font-size: 90rpx;
    font-weight: bolder;
}

.gp-description {
    font-size: 28rpx;
    font-weight: bold;
}

.gp-description:first {
    margin-top: 18rpx;
}

.gp-content {
    margin-top: 4rpx;
    display: flex;
    align-items: flex-end;
}

.gp-gp {
    display: flex;
    align-items: baseline;
    font-size: 28rpx;
    font-weight: bold;
}

.gp-carbon {
    height: 70rpx;
}

.gp-carbon-value {
    font-weight: bold;
    font-size: 50rpx;
    color: #FFF9C8;
    margin-left: 8rpx;
}

.gp-star {
    margin-left: 16rpx;
}

.gp-star-value {
    margin-left: 8rpx;
    align-self: center;
    display: flex;
    align-items: flex-end;
}

.gp-star-star {
    width: 30rpx;
    height: 30rpx;
    margin-left: 2rpx;
    margin-right: 2rpx;
}